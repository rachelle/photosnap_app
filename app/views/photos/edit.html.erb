<div class="text-center">
<div class= "feed">
<h1>Update your Post</h1> 
</div>

</div>

<% provide(:title, "Edit Post") %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
   <br>
    <%= form_for @photo, :html => { :multipart => true } do |f| %>
    <br>
    <div class="field">
        <%= f.file_field :image %>
    <br>
    <h3>url:</h3> 
      <%= f.text_field :url %>
    <br>
    <h3>title:</h3>
      <%= f.text_field :title %>
    <br> 
    <h3>caption:</h3> 
      <%= f.text_field :caption %>
    <br>
      <%= f.submit "Upload" %> 
              <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

  <div class="text-center">
    <%= link_to "Delete Post", photo_path(@photo), method: :delete, data: { confirm: 'Are you sure yo
      u want to delete this post?' } %>
    <%= link_to 'cancel', photos_path %>

    
  </div>
</div>

